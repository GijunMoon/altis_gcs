<Window x:Class="altis_gcs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="Ground Control Station" Height="1080" Width="1920"
        MinHeight="600" MinWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <!-- Combined Acceleration Chart -->
            <oxy:PlotView x:Name="Acceleration" Grid.Row="0" Grid.Column="0" Margin="10,143,10,266"/>

            <!-- Gyro Chart -->
            <oxy:PlotView x:Name="Gyro" Grid.Row="0" Grid.Column="0" Margin="0,338,20,71"/>

            <!-- Command Panel -->
            <StackPanel Grid.Row="0" Grid.Column="2" Margin="10" Background="LightBlue">
                <TextBlock Text="Command Panel" FontSize="16" FontWeight="Bold" Margin="5"/>
                <Button Content="Select CSV File" Margin="5" Click="SelectCsvFile_Click"/>
                <Button Content="Emergency Eject" Margin="5" Background="Red" Foreground="White"/>
            </StackPanel>

            <!-- Flight Data Display -->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="10" Background="LightYellow">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="218" Width="644">
                        <StackPanel Margin="10">
                            <TextBlock Text="Roll:" FontWeight="Bold"/>
                            <TextBlock x:Name="RollData" Text="0°" Width="50"/>
                            <TextBlock Text="Pitch:" FontWeight="Bold"/>
                            <TextBlock x:Name="PitchData" Text="0°" Width="50"/>
                            <TextBlock Text="Yaw:" FontWeight="Bold"/>
                            <TextBlock x:Name="YawData" Text="0°" Width="50"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Latitude:" FontWeight="Bold"/>
                            <TextBlock x:Name="LatData" Text="0.0000" Width="60"/>
                            <TextBlock Text="Longitude:" FontWeight="Bold"/>
                            <TextBlock x:Name="LongData" Text="0.0000" Width="60"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="System Logs:" FontWeight="Bold"/>
                            <ListBox x:Name="SystemLogs" Width="200" Height="100"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Dummy Data Manipulation Components -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
                        <TextBlock Text="Adjust Dummy Data" FontWeight="Bold" Margin="5"/>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Roll:" Width="50"/>
                            <Slider x:Name="RollSlider" Minimum="-180" Maximum="180" Width="100" ValueChanged="RollSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Pitch:" Width="50"/>
                            <Slider x:Name="PitchSlider" Minimum="-90" Maximum="90" Width="100" ValueChanged="PitchSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Yaw:" Width="50"/>
                            <Slider x:Name="YawSlider" Minimum="-180" Maximum="180" Width="100" ValueChanged="YawSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Lat:" Width="50"/>
                            <Slider x:Name="LatSlider" Minimum="-90" Maximum="90" Width="100" ValueChanged="LatSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Long:" Width="50"/>
                            <Slider x:Name="LongSlider" Minimum="-180" Maximum="180" Width="100" ValueChanged="LongSlider_ValueChanged"/>
                        </StackPanel>
                        <Button Content="Reset Data" Margin="5" Click="ResetData_Click"/>
                    </StackPanel>

                    <!-- 3D View for Rocket Attitude -->
                    <Viewport3D Grid.Column="2" Margin="10">
                        <Viewport3D.Camera>
                            <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-1" UpDirection="0,1,0" FieldOfView="60"/>
                        </Viewport3D.Camera>
                        <ModelVisual3D>
                            <ModelVisual3D.Content>
                                <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                        <ModelVisual3D>
                            <ModelVisual3D.Transform>
                                <Transform3DGroup>
                                    <RotateTransform3D x:Name="RollTransform">
                                        <RotateTransform3D.Rotation>
                                            <AxisAngleRotation3D Axis="1,0,0" Angle="0"/>
                                        </RotateTransform3D.Rotation>
                                    </RotateTransform3D>
                                    <RotateTransform3D x:Name="PitchTransform">
                                        <RotateTransform3D.Rotation>
                                            <AxisAngleRotation3D Axis="0,1,0" Angle="0"/>
                                        </RotateTransform3D.Rotation>
                                    </RotateTransform3D>
                                    <RotateTransform3D x:Name="YawTransform">
                                        <RotateTransform3D.Rotation>
                                            <AxisAngleRotation3D Axis="0,0,1" Angle="0"/>
                                        </RotateTransform3D.Rotation>
                                    </RotateTransform3D>
                                </Transform3DGroup>
                            </ModelVisual3D.Transform>
                            <ModelVisual3D.Content>
                                <GeometryModel3D>
                                    <GeometryModel3D.Geometry>
                                        <!-- Define a simple trapezoid shape -->
                                        <MeshGeometry3D 
                                            Positions="0,0,0  1,0,0  0.8,1,0  0.2,1,0" 
                                            TriangleIndices="0 1 2 2 3 0"/>
                                    </GeometryModel3D.Geometry>
                                    <GeometryModel3D.Material>
                                        <DiffuseMaterial Brush="Blue"/>
                                    </GeometryModel3D.Material>
                                </GeometryModel3D>
                            </ModelVisual3D.Content>
                        </ModelVisual3D>
                    </Viewport3D>
                </Grid>
            </Border>

            <!-- GPS Map -->
            <Border Margin="15,10,15,10" Background="LightGray" Grid.Column="1">
                <Grid>
                    <GroupBox Name="mapgroup" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch">
                        <gmap:GMapControl x:Name="mapControl" Zoom="13" MaxZoom="24" MinZoom="1" />
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>