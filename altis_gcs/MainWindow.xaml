<Window x:Class="altis_gcs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:helix="http://helix-toolkit.org/wpf"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="Rocket Control Station" Height="1080" Width="1920"
        MinHeight="600" MinWidth="800">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid>
            <!-- 행 높이: 그래프 영역과 하단 데이터 영역 -->
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- 열 분할: 좌측은 그래프, 우측은 탭 컨트롤 -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 그래프 영역 -->
            <Grid Grid.Row="0" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <!-- Thrust/Acceleration Chart -->
                <oxy:PlotView x:Name="Acceleration" Grid.Row="0" Margin="10"/>
                <!-- Angular Velocity Chart -->
                <oxy:PlotView x:Name="Gyro" Grid.Row="1" Margin="10"/>
            </Grid>

            <!-- 탭 컨트롤: Command Panel, Parameter Settings, GPS 탭 -->
            <TabControl Grid.Row="0" Grid.Column="1" Margin="10">
                <TabItem Header="Command Panel">
                    <Grid Background="Black">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 타이틀 영역 -->
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="CONTROL" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="28" FontWeight="Bold" Foreground="White" Margin="10"/>

                        <!-- LOAD MISSION DATA 버튼 -->
                        <Button Grid.Row="1" Grid.Column="0" Content="미션 데이터 불러오기" 
                Click="SelectCsvFile_Click" Margin="10"
                FontSize="22" FontWeight="Bold"
                Background="#FF0066CC" Foreground="White" Height="90"/>

                        <!-- 발사 시작 버튼 -->
                        <Button Grid.Row="1" Grid.Column="1" Content="발사 시작" 
                Click="StartLaunch_Click" Margin="10"
                FontSize="22" FontWeight="Bold"
                Background="#FF009900" Foreground="White" Height="90"/>

                        <!-- ABORT LAUNCH 버튼 -->
                        <Button Grid.Row="2" Grid.Column="0" Content="비 상 사 출" 
                Click="Emergency_Click" Margin="10"
                FontSize="22" FontWeight="Bold"
                Background="#FFCC0000" Foreground="White" Height="90"/>

                        <!-- RESET SYSTEM 버튼 -->
                        <Button Grid.Row="2" Grid.Column="1" Content="시스템 리셋" 
                Click="ResetSystem_Click" Margin="10"
                FontSize="22" FontWeight="Bold"
                Background="#FF333333" Foreground="White" Height="90"/>

                        <!-- 타이머 표시 영역 -->
                        <TextBlock Grid.Row="3" Grid.ColumnSpan="2" x:Name="TimerDisplay" 
                   Text="00:00" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="36" FontWeight="Bold" Foreground="White" Margin="10"/>
                    </Grid>
                </TabItem>


                <TabItem Header="Parameter Settings">
                    <StackPanel Background="LightGreen">
                        <TextBlock Text="Telemetry Port Settings" FontSize="16" FontWeight="Bold" Margin="5"/>
                        <ComboBox x:Name="SerialPortComboBox" Margin="5" Width="150" HorizontalAlignment="Left"/>
                        <Button Content="Refresh Ports" Margin="5" Click="RefreshPorts_Click"/>
                        <Button Content="Connect" Margin="5" Click="Connect_Click"/>
                        <Button Content="Disconnect" Margin="5" Click="Disconnect_Click"/>
                        <TextBlock Text="Flight Parameters" FontSize="16" FontWeight="Bold" Margin="5"/>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Max Altitude:" Width="100"/>
                            <TextBox x:Name="MaxAltitudeTextBox" Width="100"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Max Time:" Width="100"/>
                            <TextBox x:Name="MaxSpeedTextBox" Width="100"/>
                        </StackPanel>
                        <Button Content="Update Parameters" Margin="5" Click="UpdateParameters_Click"/>
                    </StackPanel>
                </TabItem>
                <TabItem Header="GPS">
                    <Grid Background="LightGray">
                        <GroupBox Header="Flight Trajectory" Name="mapgroup" 
                                  VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                  Margin="10">
                            <gmap:GMapControl x:Name="mapControl" Zoom="13" MaxZoom="24" MinZoom="1"/>
                        </GroupBox>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Flight Data Display (하단 영역) -->
            <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Background="LightYellow">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Height="218" Width="644">
                        <StackPanel Margin="10">
                            <TextBlock Text="Roll:" FontWeight="Bold"/>
                            <TextBlock x:Name="RollData" Text="0°" Width="50"/>
                            <TextBlock Text="Pitch:" FontWeight="Bold"/>
                            <TextBlock x:Name="PitchData" Text="0°" Width="50"/>
                            <TextBlock Text="Yaw:" FontWeight="Bold"/>
                            <TextBlock x:Name="YawData" Text="0°" Width="50"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Latitude:" FontWeight="Bold"/>
                            <TextBlock x:Name="LatData" Text="0.0000" Width="60"/>
                            <TextBlock Text="Longitude:" FontWeight="Bold"/>
                            <TextBlock x:Name="LongData" Text="0.0000" Width="60"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="Altitude:" FontWeight="Bold"/>
                            <TextBlock x:Name="AltitudeData" Text="0 m" Width="60"/>
                            <TextBlock Text="Velocity:" FontWeight="Bold"/>
                            <TextBlock x:Name="VelocityData" Text="0 m/s" Width="60"/>
                        </StackPanel>
                        <StackPanel Margin="10">
                            <TextBlock Text="System Logs:" FontWeight="Bold"/>
                            <ListBox x:Name="SystemLogs" Width="429" Height="140"/>
                            <!-- 시리얼 메시지 입력창과 전송 버튼 추가 -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBox x:Name="SerialMessageTextBox" Width="323" Height="23" Margin="0,0,5,0"/>
                                <Button Content="전송" Click="SendSerialMessage_Click" Width="50" Height="25"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Dummy Data Manipulation Components -->
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10">
                        <TextBlock Text="Adjust Dummy Data" FontWeight="Bold" Margin="5"/>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Roll:" Width="50"/>
                            <Slider x:Name="RollSlider" Minimum="-180" Maximum="180" Width="100" ValueChanged="RollSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Pitch:" Width="50"/>
                            <Slider x:Name="PitchSlider" Minimum="-90" Maximum="90" Width="100" ValueChanged="PitchSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Yaw:" Width="50"/>
                            <Slider x:Name="YawSlider" Minimum="-180" Maximum="180" Width="100" ValueChanged="YawSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Latitude:" Width="50"/>
                            <Slider x:Name="LatSlider" Minimum="-90" Maximum="90" Width="100" ValueChanged="LatSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Longitude:" Width="50"/>
                            <Slider x:Name="LongSlider" Minimum="-180" Maximum="180" Width="100" ValueChanged="LongSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Altitude:" Width="50"/>
                            <Slider x:Name="AltitudeSlider" Minimum="0" Maximum="100000" Width="100" ValueChanged="AltitudeSlider_ValueChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBlock Text="Velocity:" Width="50"/>
                            <Slider x:Name="VelocitySlider" Minimum="0" Maximum="10000" Width="100" ValueChanged="VelocitySlider_ValueChanged"/>
                        </StackPanel>
                        <Button Content="Reset Data" Margin="5" Click="ResetData_Click"/>
                    </StackPanel>

                    <!-- 3D View for Rocket Attitude -->
                    <helix:HelixViewport3D Grid.Column="2" Margin="10" ZoomExtentsWhenLoaded="True">
                        <helix:HelixViewport3D.Camera>
                            <PerspectiveCamera Position="0,0,5" LookDirection="0,0,-1" UpDirection="0,1,0" FieldOfView="60"/>
                        </helix:HelixViewport3D.Camera>
                        <ModelVisual3D x:Name="ModelVisual"/>
                    </helix:HelixViewport3D>
                </Grid>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
