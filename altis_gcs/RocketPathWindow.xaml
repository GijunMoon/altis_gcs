<Window x:Class="altis_gcs.RocketPathWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
        Title="로켓 비행 경로" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- 지도 표시 -->
        <gmap:GMapControl x:Name="mapControl" Grid.Row="0" />

        <!-- 파라미터 입력 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
            <TextBlock Text="위도:" />
            <TextBox x:Name="latTextBox" Width="100" Margin="5" />
            <TextBlock Text="경도:" />
            <TextBox x:Name="lngTextBox" Width="100" Margin="5" />
            <Button Content="경로 추가" Click="AddPoint_Click" Margin="5" />
            <Button Content="닫기" Click="Close_Click" Margin="5" />
            <Button Content="경로 테스트" Click="TestPath_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>